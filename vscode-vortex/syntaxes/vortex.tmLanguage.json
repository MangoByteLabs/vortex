{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Vortex",
  "scopeName": "source.vortex",
  "patterns": [
    { "include": "#comments" },
    { "include": "#annotations" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#builtins" },
    { "include": "#operators" },
    { "include": "#function-definition" },
    { "include": "#kernel-definition" },
    { "include": "#function-call" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.vortex",
          "match": "//.*$"
        },
        {
          "name": "comment.block.vortex",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "annotations": {
      "patterns": [
        {
          "name": "meta.annotation.vortex",
          "match": "@(schedule|scan|local_loss|ode_solve|constant_time|recurrent|temporal_unroll)\\b",
          "captures": {
            "0": { "name": "entity.name.function.decorator.vortex" }
          }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.vortex",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.vortex",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.vortex",
          "match": "\\b0x[0-9a-fA-F][0-9a-fA-F_]*\\b"
        },
        {
          "name": "constant.numeric.float.vortex",
          "match": "\\b[0-9][0-9_]*\\.[0-9][0-9_]*([eE][+-]?[0-9]+)?\\b"
        },
        {
          "name": "constant.numeric.integer.vortex",
          "match": "\\b[0-9][0-9_]*\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.vortex",
          "match": "\\b(if|else|match|for|in|while|loop|break|continue|return)\\b"
        },
        {
          "name": "keyword.declaration.vortex",
          "match": "\\b(fn|kernel|struct|enum|trait|impl|type|const|pub|import)\\b"
        },
        {
          "name": "keyword.binding.vortex",
          "match": "\\b(let|var|mut)\\b"
        },
        {
          "name": "keyword.other.vortex",
          "match": "\\b(where|as|comptime|pipeline|stage|dispatch)\\b"
        },
        {
          "name": "constant.language.boolean.vortex",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.vortex",
          "match": "\\b(i8|i16|i32|i64|i128|u8|u16|u32|u64|f16|f32|f64|bool)\\b"
        },
        {
          "name": "storage.type.vortex",
          "match": "\\b(Tensor|Field|Scalar|Sparse|SparseIndex|SpikeTrain|Memory|DynTensor)\\b"
        },
        {
          "name": "entity.name.type.vortex",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "builtins": {
      "patterns": [
        {
          "name": "support.function.builtin.vortex",
          "match": "\\b(println|len|push|range|assert|assert_eq|field_from_hex|secp256k1_generator|scalar_mul|sha256|ecdsa_sign|ecdsa_verify|schnorr_sign|schnorr_verify|ntt|intt|msm|pairing|poly_mul|poly_eval|softmax|gelu|attention|layer_norm|rope|ssm_scan|spike_train|memory_new|goodness|hebbian_update|ff_layer|ode_solve_rk4|liquid_cell|cfc_cell)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.matmul.vortex",
          "match": "@(?!=)"
        },
        {
          "name": "keyword.operator.elementwise.vortex",
          "match": "\\.\\*|\\.\\/|"
        },
        {
          "name": "keyword.operator.comparison.vortex",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.vortex",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.assignment.vortex",
          "match": "\\+=|-=|\\*=|/=|@=|="
        },
        {
          "name": "keyword.operator.arithmetic.vortex",
          "match": "\\*\\*|[+\\-*/%]"
        },
        {
          "name": "keyword.operator.bitwise.vortex",
          "match": "<<|>>|&|\\||\\^|~"
        },
        {
          "name": "keyword.operator.arrow.vortex",
          "match": "->|=>"
        },
        {
          "name": "keyword.operator.path.vortex",
          "match": "::"
        },
        {
          "name": "keyword.operator.range.vortex",
          "match": "\\.\\."
        }
      ]
    },
    "function-definition": {
      "patterns": [
        {
          "match": "\\b(fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.declaration.vortex" },
            "2": { "name": "entity.name.function.vortex" }
          }
        }
      ]
    },
    "kernel-definition": {
      "patterns": [
        {
          "match": "\\b(kernel)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.declaration.vortex" },
            "2": { "name": "entity.name.function.kernel.vortex" }
          }
        }
      ]
    },
    "function-call": {
      "patterns": [
        {
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "entity.name.function.call.vortex" }
          }
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.vortex",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
