// Math utility module for Vortex

pub fn square(x: i64) -> i64 {
    return x * x
}

pub fn cube(x: i64) -> i64 {
    return x * x * x
}

pub fn abs(x: i64) -> i64 {
    if x < 0 {
        return -x
    }
    return x
}

pub fn max(a: i64, b: i64) -> i64 {
    if a > b {
        return a
    }
    return b
}

pub fn min(a: i64, b: i64) -> i64 {
    if a < b {
        return a
    }
    return b
}
